<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/png_transparent_computer_icons_user_profile_avatar_profile_heroes_black_profile_thumbnail" />

    <Button
        android:id="@+id/mypost"
        android:layout_width="131dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginVertical="400dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="My Posts" />

    <Button
        android:id="@+id/changepassword"
        android:layout_width="218dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="80dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_marginVertical="480dp"
        android:text="Change Password" />
</FrameLayout>